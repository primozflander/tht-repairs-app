<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/listPreferredItemPaddingLeft"
            android:layout_marginBottom="?attr/listPreferredItemPaddingLeft"
            android:text="Izberi projekt:"
            android:textSize="30sp"

            />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="?attr/listPreferredItemPaddingLeft" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/listPreferredItemPaddingRight"
            android:layout_marginBottom="?attr/listPreferredItemPaddingLeft"
            android:text="Seznam napak"
            android:textSize="30sp" />

        <ListView
            android:id="@+id/errorsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5">

        </ListView>

        <Button
            android:id="@+id/exportButton"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="?attr/listPreferredItemPaddingRight"
            android:text="Izvozi seznam"
            android:textSize="24sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>